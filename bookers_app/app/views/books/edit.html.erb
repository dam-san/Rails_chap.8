<% @book.errors.full_messages.each do |message|%>
  <%= message%>
<%end%>

<h2>Editing Book</h2>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f|%>
<h4>Title</h4>
<%= f.text_field :title%>
<h4>body</h4>
<%= f.text_area :body%>
<%= f.submit 'Update Book'%>
<% end%>

<%= link_to("show","/books/#{@book.id}")%>
<span>|</span>
<%= link_to("Back","/books") %>

